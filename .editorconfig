# EditorConfig helps maintain consistent coding styles
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.gd]
indent_style = tab
indent_size = tab

[*.{tscn,tres,gdshader,shader}]
indent_style = tab
indent_size = tab

[*.{yml,yaml,md,json}]
indent_style = space
indent_size = 2

